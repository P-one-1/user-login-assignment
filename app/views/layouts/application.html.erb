<!DOCTYPE html>
<html>
  <head>
    <title>Social</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user.present? && params[:controller] != 'sessions' && params[:controller] != 'registrations' %>
      <%= link_to 'Log-out', sessions_destroy_path, method: :delete %>
    <% end %>
    <% if current_user.nil? && params[:controller] != 'sessions' && params[:controller] != 'registrations' %>
      <%= link_to 'Log-in', sessions_new_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
